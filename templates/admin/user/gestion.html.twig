{% extends "base.html.twig" %}
{% block title %} Gestion des membres{% endblock %}
{% block body %} 
<div class="m-4">
<table class="table table-dark table-striped">
<h1 class="text-center">Gestion des membres</h1>
<thead>
    <tr>
        <th>Civilié</th>
        <th>Nom</th>
        <th>Prénom</th>
        <th>Email</th>
        <th>Statut</th>
        <th>Date d'enregistrement</th>
        <th>Actions</th>
    </tr>
</thead>
<tbody>
    {% for user in users %}
        <tr>
            <td>{{ user.civility }}</td>
            <td>{{ user.lastname }}</td>
            <td>{{ user.firstname }}</td>
            <td>{{ user.email }}</td>
            <td> {% for role in user.roles %}
                {{role}}
                {% endfor %}
            </td>
            <td>{{ user.registrationDate| date('d/m/Y à H:i:s')}}</td>
            <td class="">
                <a href="{{ path('delete_user', {id:user.id}) }}" class="bi bi-trash3 text-danger"></a>
                <a href="{{ path('modif_user', {id:user.id}) }}" class="bi bi-pencil-square text-warning"></a>
                <a href="{{ path('add_user', {id:user.id}) }}"  class="bi bi-plus-lg text-success" ></a>
            </td>
        </tr>
    {% endfor %}
</tbody>
</table>
</div>
{% endblock %}